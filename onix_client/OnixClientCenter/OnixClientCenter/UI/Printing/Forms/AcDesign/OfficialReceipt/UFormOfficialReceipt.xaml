                                </StackPanel>
                            </Border>

                            <Border BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Column="1" Background="{Binding ElementName=rootElement, Path=ShadowBackground}">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="เลขที่เอกสาร" Style="{StaticResource ResourceKey=H2TextFont}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="DOCUMENT NO." Style="{StaticResource ResourceKey=H2_1TextFont}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </StackPanel>
