                            <Label Grid.Column="0" Grid.Row="6" Content="ปกส (นายจ้าง)" VerticalAlignment="Center" 
                                   VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="5,0,0,0"/>
